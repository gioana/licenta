<resources>

    <style name="AppTheme" parent="android:Theme.WithActionBar"></style>

    <style name="CustomActionBar" parent="android:Theme.WithActionBar">
        <item name="android:background">@color/blue</item>
    </style>

    <style name="DefaultButtonText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="RunListText">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="RunListTextGreenLarge">
        <item name="android:textColor">@color/blue</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="RunText">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RunTextLarge">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="RunTextExtraLarge">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">50sp</item>
    </style>

    <style name="RecordText">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecordTextSmall">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">5dp</item>
    </style>

    <style name="RecordTextColor">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RecordTextColorSmall">
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsText">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SettingsEditText">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>